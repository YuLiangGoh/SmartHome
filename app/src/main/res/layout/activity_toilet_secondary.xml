<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ToiletSecondary"
    android:background="@color/secondaryColor"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginEnd="4dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/aircon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="6dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/living_room_air_con_icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:background="@drawable/air_cond_icon"
                        />

                    <com.suke.widget.SwitchButton
                        android:id="@+id/living_room_air_con_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        app:sb_checked_color="@color/primaryColor" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/living_room_air_con_title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Daikin Air Conditioner"
                        android:textSize="14sp"
                        android:textColor="@color/primaryColor"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:layout_marginTop="12dp"
                        />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/living_room_outlinedButton_setting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Setting"
                        android:textSize="12sp"
                        android:textColor="@color/primaryColor"
                        app:icon="@drawable/setting_icon"
                        app:iconSize="16dp"
                        app:iconTint="@color/primaryColor"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_marginTop="12dp"
                        app:rippleColor="@color/grey"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        />

                    <RelativeLayout
                        android:id="@+id/living_room_temperature_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="24dp">

                        <TextView
                            android:id="@+id/living_room_temperature"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toStartOf="@+id/main_thermometer_icon"
                            android:text="27 \u2103"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"/>

                        <ImageView
                            android:id="@+id/main_thermometer_icon"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:background="@drawable/thermometer_icon"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="10dp"
                            android:backgroundTint="@color/snowblue"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/living_room_swing_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toStartOf="@+id/main_swing_icon"
                            android:text="Swing"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"/>

                        <ImageView
                            android:id="@+id/main_swing_icon"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:background="@drawable/oscillation_icon"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="10dp"
                            android:backgroundTint="@color/lightorange"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/living_room_timer_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toStartOf="@+id/main_timer_icon"
                            android:text="Timer"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"/>

                        <ImageView
                            android:id="@+id/main_timer_icon"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:background="@drawable/timer_icon"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="10dp"
                            android:backgroundTint="@color/lightgreen"
                            />
                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginStart="4dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            app:cardCornerRadius="8dp"
            android:id="@+id/light_card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="8dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/living_room_smart_light_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/energy_saving_bulb_icon"
                        />

                    <com.suke.widget.SwitchButton
                        android:id="@+id/living_room_smart_light_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        app:sb_checked_color="@color/primaryColor" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/living_room_smart_light_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Smart Light"
                        android:textColor="@color/primaryColor"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/living_room_smart_tv_icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/tv_icon"
                        />

                    <com.suke.widget.SwitchButton
                        android:id="@+id/living_room_smart_tv_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        app:sb_checked_color="@color/primaryColor" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/living_room_smart_tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Smart TV"
                        android:textColor="@color/primaryColor"
                        android:textStyle="bold"/>
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>